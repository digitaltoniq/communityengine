%h2
  =:logged_in.l
  = link_to current_user.login, dashboard_path(current_user), :id => 'user-menu'
#user-menu-tip
  =link_to :log_out.l, logout_path

%script{:type => "text/javascript"}
  :plain
    new Tip('user-menu', $('user-menu-tip'), {
      hook:{target: 'bottomRight', tip: 'topRight'},
      hideOn: false, 
      hideAfter: 1.5,  
      className: 'silver',
      offset: {y:2, x:12}
      });
