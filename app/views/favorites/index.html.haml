-box :class => 'favorites' do
  %h3= link_to "#{display_name(@user)}'s "+:favorites.l, user_favorites_path(@user)

  - @favorites.to_a.in_groups_of(2) do |group|
    .row  
      - group.compact.each do |f|
        =render :partial => "favorite", :locals => {:favorite => f}

        
.pagination=paginating_links @favorites if @favorites.page_count > 1      
