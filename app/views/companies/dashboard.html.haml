- @section = 'my_profile'

=render :partial => "companies/dashboard_nav"
  
#yui-main

  .yui-b
    -box do
      %h3= :company_dashboard.l(:name => @company)
      %ul.dashboard_actions
        %li.highlight= link_to :new_post.l, new_company_post_path(@company)
        %li= link_to :manage_posts.l, manage_company_posts_path(@company)
        %li= link_to :manage_company_conversation_comments.l, post_comments_company_path(@company)
        %li= link_to :manage_company_page.l, edit_company_path(@company)
        %li= link_to :manage_representatives.l, company_representative_invitations_path(@company)
        %li= link_to :manage_company_representative_comments.l, representative_comments_company_path(@company)

  .yui-b
    -box do
      - unless @network_activity.empty?
        %h3=:recent_company_activity.l
        -box :class => "fresh" do
          =render :partial => "activities/activity", :collection => @network_activity
          %h6.all= link_to :see_all_activity.l, activity_company_path(@company)