- @section = 'manage'

.yui-b.sidebar
  = render :partial => 'shared/admin_nav'

#yui-main
  .yui-b
    %h3.h3.u= "Add New Company"
    -box :class => 'form-1' do
      -# %h3=:sign_up.l
      = error_messages_for :company
      - form_for :company, :url => companies_path, :html => {:class => 'MainForm'} do |f|
        %p.Fe
          %label{"for"=>"company_name"}
            =:company_name.l
            -# DJS %em=:required_your_username_must_not_contain_numerals_spaces_or_special_characters.l
          = f.text_field :name

        %p.Fe
          %label{:for => 'company_url_slug'}
            = "Companiesandme URL slug"
            %small
              = "(companiesandme.com/_________, cannot be changed)"
          = f.text_field :url_slug

        %p.Fe
          %label{:for => 'company_url'}
            = "Company website"
          = f.text_field :url

        -#
          DJS: user for initial primary representive
          %label{"for"=>"company_email"}
            =:e_mail_address.l
            %em=:required_we_will_send_a_confirmation_e_mail_to_the_address_you_enter.l
          = f.text_field :email

        -#
          DJS
          %label{"for"=>"user_birthdate"}
            =:birthday.l
            \:
            %em=:required_you_must_be_at_least_years_old_to_sign_up.l
          = date_select :user, :birthday, {:start_year => 1926, :end_year => (Time.now.year - 13)}

          -if AppConfig.require_captcha_on_signup
            .right{:style => 'margin-top:2em;'}= recaptcha_tags

          %label{"for"=>"user_password"}
            =:type_your_password.l
          = f.password_field :password
          %label{"for"=>"user_password_confirmation"}
            =:re_type_your_password_to_confirm.l
          = f.password_field :password_confirmation
          = hidden_field_tag :inviter_id, params[:inviter_id]
          = hidden_field_tag :inviter_code, params[:inviter_code]
          
        %p.Fb= submit_tag "Submit", :class => 'button1'
    .hr

