.yui-b
  -box do
    = render :partial => 'profile_company_info_sidebar', :locals => {:company => @company}

  - if @company.description
    -box :id => "about_me" do
      %h3
        =:about_company.l
      %p= @company.description

#yui-main
  - if @comments.empty?
    #emptycomments= :no_comments_found.l_with_args(:type => @commentable.class.to_s.underscore)
  -box :class => 'yui-b hfeed comments', :id => 'comments' do
    %h3
      = :comments.l + " -"
      = link_to @title, @back_url

    %a#newest_comment
      = render :partial => 'comments/comment', :collection => @comments

    .pagination=paginating_links @comments if @comments.page_count > 1


      
