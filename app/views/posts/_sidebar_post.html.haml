%dl.vcard
  %dt.photo
    = link_to image_tag((post.first_image_in_body || post.user.avatar_photo_url(:thumb)), :alt=>"", :width=>"50", :height=>"50"), user_post_path(post.user, post)
  %dd.fn
    = link_to post.title, user_post_path(post.user, post), :rel => 'bookmark'
  %dd= truncate_words(post.post, 9, '...' )
