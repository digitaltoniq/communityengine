.entry
  .photo
    = link_to image_tag(post.photo(:small), :alt=>""), post_path(post)
  .title
    = link_to post.title, post_path(post), :rel => 'bookmark'
  .comments
    = post.comments_count
  .company
    = render :partial => 'followings/follow_link', :locals => {:followee => Company.for_post(post)}