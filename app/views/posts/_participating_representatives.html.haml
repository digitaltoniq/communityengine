- unless representatives.empty?
  .box-c-company-representatives
    %h3.alt.hd-txt
      %span.also-participating
        %i
        %b= "Also Participating"
    - box :class => 'box4' do
      - representatives.each do |representative|
        .entry
          %p.photo
            = link_to image_tag(representative.avatar_photo_url(:small), :alt => "#{h(representative)}"), representative_path(representative), :rel => 'bookmark', :class => 'photo', :title => "#{h(representative)}'s profile"
          %p.name
            = link_to h(representative), representative_path(representative), :class => 'url'
          %p.details
            = representative.title

-# unless representatives.empty?
  -box :class => 'alt' do
    %h3=:participating_representatives.l(:count => representatives.size)
    %ul.list.user
      - representatives.each do |representative|
        %li
          = link_to image_tag(representative.avatar_photo_url(:small), :alt => "#{h(representative)}"), representative_path(representative), :rel => 'bookmark', :class => 'photo', :title => "#{h(representative)}'s profile"
          = link_to h(representative), representative_path(representative), :class => 'url'
