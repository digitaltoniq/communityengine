- company = representative.company

.yui-gf.row
  .yui-u.first.centered= image_tag( representative.avatar_photo_url(:thumb), :class => "polaroid" )
  .yui-g
    .yui-u.first
      %h2= link_to representative.full_name, company_representative_path(company, representative)
      -# DJS = "from #{company.location}<br/>" if user.metro_area
      -# DJS
        = friendship.friendship_status.name ? :accepted.l : :denied.l
        \:
        =:requested.l
        = time_ago_in_words friendship.created_at
    -#
      DJS
      .yui-u= friendship_control_links(friendship) if @is_current_user