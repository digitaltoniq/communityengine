- form_tag update_account_user_url(@user), :method => 'put', :class => "MainForm", :multipart => true do

  -box :class => "alt first_alt" do 

    %h3.h3.u= "Edit Your Account"
    %p.nav-mini-link
      = link_to "Edit your profile instead?", edit_user_path(@user)

  #yui-main
    .yui-b
      -box :class => "form-1 form-account-edit" do

        = error_messages_for :user

        %p.Fe.first-name
          %label{"for"=>"user_first_name"}
            =:first_name.l
          = text_field :user, :first_name, :size => "20"

        %p.Fe.last-name
          %label{"for"=>"user_last_name"}
            =:last_name.l
          = text_field :user, :last_name, :size => "20"

        %p.Fe.email
          %label{"for"=>"user_email"}
            = "Email"
          = text_field :user, :email, :size => "28"

        %p.Fe
          %label{"for"=>"user_password"}
            =:password.l
          = password_field :user, :password, :size => "28"

        -# %p.Fe
          %label{"for"=>"user_password_confirmation"}
            =:confirm_password.l
          = password_field :user, :password_confirmation, :size => "28"

        %p.Fb
          = submit_tag :save_changes.l, :class => "button1"

        - if Representative.for_user(@user) or @user.admin?
          %p.nav-mini-link.button-deactivate= link_to "Click here to permanently deactivate your account", deactivate_user_path(@user), :method => :put, :confirm => "Are you sure you want to deactivate your account?  You will no long be able to login or interact with the community."
        .hr
        
