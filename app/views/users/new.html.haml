#yui-main
  .yui-b.box-center
    %h3.alt.hd-txt
      %span.sign-up
        %i
        %b= "Sign Up"

    .box-c-signup
      %p.have-account= link_to :already_have_an_account.l, login_path
    
      .box-c-form
        -box :class => 'box2' do
          - form_for :user, :url => users_path, :html => {:class => 'MainForm'} do |f|
          
            = error_messages_for :user

            = hidden_field_tag :inviter_id, params[:inviter_id]
            = hidden_field_tag :inviter_code, params[:inviter_code]
            
            %p.Fe.f-email
              %label{"for"=>"user_email"}
                =:e_mail_address.l
                -# %em=:required_we_will_send_a_confirmation_e_mail_to_the_address_you_enter.l
              = f.text_field :email, :onKeyUp => "$('email-confirmation').update(this.value);"

            %p.Fe.f-first-name
              %label{"for"=>"user_first_name"}
                =:first_name.l
              = f.text_field :first_name

            %p.Fe.f-last-name
              %label{"for"=>"user_last_name"}
                =:last_name.l
              = f.text_field :last_name

            -# if AppConfig.require_captcha_on_signup
              .right{:style => 'margin-top:2em;'}= recaptcha_tags

            %p.Fe.f-password
              %label{"for"=>"user_password"}
                =:type_your_password.l
                %span.mini (minimum 6 characters)
              = f.password_field :password

            %p.Fe.f-password-confirm
              %label{"for"=>"user_password_confirmation"}
                =:re_type_your_password_to_confirm.l
              = f.password_field :password_confirmation

            -#%p.Fe.f-zipcode
              %label{"for"=>"user_zipcode"}
                = "Zip code"
              -# = f.text_field :zipcode
              %input#user_zipcode{"name" => "zipcode"}

            %p.f-email-confirm-1
              %label
                =:does_your_email_look_okay.l
            %p.f-email-confirm-2
              %span#email-confirmation
                = !@user.email.blank? ? @user.email : "no email address entered"
            
            %p.Fb
              = submit_tag :sign_up.l, :class => "button-signup"
      
      .box-c-facebook
        -box :class => 'box2' do
          %p.title
            Or use your Facebook account to log in
            = fb_login
      
      .box-c-feature
        -box :class => 'box1' do
          %h3.alt.hd-txt
            %span.now-featuring
              %i
              %b= "Now Featuring"
          %p.title
            Companies in the 
            = "Greater SF Bay" 
            Area
          %p.comment
            %strong
              Are you visiting from somewhere else?
            %br/
            We're glad you're here. Sign up to find our first when Companiesandme comes to your city.
            
        
-# .yui-b
  -box do
    -#
      %h3
        =:why_sign_up.l
      %ul.list.checks
      %li
        = :sign_up_reason_1.l
      %li
        = :sign_up_reason_2.l
    %p
      or register with Facebook connect
      = fb_login

  -box :class => 'alt' do
    %h3=:tips.l
    %p
      =:after_signing_up_youll_receive_an_e_mail_confirmation_message.l
    %p
      =:click_the_activation_link_in_the_e_mail_to_log_in.l

-# #yui-main
  .yui-b
    -box do
      %h3=:sign_up.l

      %p= link_to :already_have_an_account.l, "/login"

      - form_for :user, :url => users_path, :html => {:class => 'MainForm'} do |f|
      
        = error_messages_for :user

        = hidden_field_tag :inviter_id, params[:inviter_id]
        = hidden_field_tag :inviter_code, params[:inviter_code]
        
        %label{"for"=>"user_first_name"}
          =:first_name.l
        = f.text_field :first_name

        %label{"for"=>"user_last_name"}
          =:last_name.l
        = f.text_field :last_name

        %label{"for"=>"user_email"}
          =:e_mail_address.l
          %em=:required_we_will_send_a_confirmation_e_mail_to_the_address_you_enter.l
        = f.text_field :email, :onKeyUp => "$('email-confirmation').update(this.value);"

        -if AppConfig.require_captcha_on_signup
          .right{:style => 'margin-top:2em;'}= recaptcha_tags

        %label{"for"=>"user_password"}
          =:type_your_password.l
        = f.password_field :password

        %label{"for"=>"user_password_confirmation"}
          =:re_type_your_password_to_confirm.l
        = f.password_field :password_confirmation

        %label
          =:does_your_email_look_okay.l
        %span#email-confirmation{:style => 'font-weight: bold;'}
          = !@user.email.blank? ? @user.email : "no email address entered"
        
        %p= submit_tag :sign_up.l

